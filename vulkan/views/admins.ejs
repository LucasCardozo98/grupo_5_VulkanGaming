<%- include("partials/head")%>
<%- include("partials/header")%>
<div>
       
        <a href="/products/list" class="btn btn-dark d-grid gap-2 col-6 mx-auto mt-5 mb-4" >Listar Productos</a>
        <a href="/products/create" class="btn btn-dark d-grid gap-2 col-6 mx-auto mb-4" >crear productos</a>
        <div>
                <h2>Administrar marcas y categorias</h2>
                <form action="/users/admin/relacionMarcaCategoria" method="POST">
                        <select name="categoria" id=""><br>
                                <%categorys.forEach(element => { %>
                                        <option value="<%=element.id%>"><%=element.name%> </option>
                                       <% }) %>
                        </select>
                        <select name="marca" id=""><br>
                                <%brands.forEach(element => { %>
                                        <option value="<%=element.id%>"><%=element.name%> </option>
                                       <% }) %>
                        </select>
                        <button type="submit">relacionar</button>
                </form>
        </div>
        <a href="#" class="btn btn-dark d-grid gap-2 col-6 mx-auto mb-4" role="button" data-bs-toggle="button">Toggle link</a>
        <a href="#" class="btn btn-dark d-grid gap-2 col-6 mx-auto mb-4" role="button" data-bs-toggle="button">Toggle link</a>
        <a href="#" class="btn btn-dark d-grid gap-2 col-6 mx-auto mb-5" role="button" data-bs-toggle="button">Toggle link</a>
           
</div>
<% if (mensajes != undefined && mensajes != null) { %>
        <ul>       
        <% mensajes.forEach(element => { %>
                 <li><%= element.message  %>  del usuario <%=element.mensajes.username%> </li>
                <% }) %>
        </ul>
    <% } %>
    <form action="/users/crearMensaje/<%= user.id %>/" method="POST">
        <textarea name="mensaje" id="" cols="30" rows="10"></textarea>
        <select name="idOtherUser" id="">
            <% users.forEach(element=> { %>
             <option value="<%=element.id%>"><%=element.username%> </option>
            <% }) %>
        </select>
        <button type="submit">enviar mensaje</button>
    </form>
<%- include("partials/footer")%>
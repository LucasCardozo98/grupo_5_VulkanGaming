<%- include("partials/head")%>
<%- include("partials/header")%>
<body>
    <div class="container text-start form">
        <section class="principal">
          <div class="row detalle">
            <div class="col-12 titulo">
              <h2>Detalle de producto </h2>
            </div>
            <div class="contenido">
              <div class="contenido text-left">
                <div class="row p-0">
                  <div class="col-12 col-lg-8">
                    <figure class="text-center bg-white">
                      <img class="img-fluid" src="/images/<%=product.image  %> ">
                    </figure>
                  </div>
                  <div class="col-12 col-lg-4 datos">
                    <h3 class="my-4">
                      <%= product.name  %> 
                    </h3>
                    <p>
                      <%= product.description  %> 
                    </p>
                    <h2>
                      <%= product.price  %> 
                    </h2>
                    <h2>
                      <%= product.categorias.name  %> 
                    </h2>
                    <h2>
                      <%= product.marcas.name %> 
                    </h2>
                    <p><i class="fas fa-credit-card mr-3 my-2"></i> Pagá en 12 cuotas sin interés</p>
                    <p><i class="fas fa-store mr-3 my-2"></i> Retiro gratis en locales del vendedor</p>
                    <button class="btn btn-primary mb-2">Comprar ahora</button>
                  </div>
                </div>
              </div>
            </div>
    
          </div>
        </section>
      </div>
      <section>

<%- include("partials/head")%>
  <%- include("partials/header")%>

  <main class="container mt-2">
    <section class="mt-2">
      
      <div class="contenedora pepeargento">
       
           
              <ul id="carrito" class="container d-flex carrito">
                
              </ul>
              <div class="botones">
    
                <button id="comprar" class="btn" onclick="comprar('comprarTodo')"><i class="fas fa-cart-plus"></i>Comprar todo</button>
                <button id="vaciar" class="btn" onclick="eliminar('eliminarTodo')">Vaciar carrito</button>
                </div>
            </div>
        

    </section>

  </main>    
          <section class="sliderpc">
            <div>
              <div class="slider owl-carousel">
                <% products.forEach(element=> { %>

                  <div class="card d-flex justify-content-center" style="padding-left: 0;">
                    <a href="/products/detail/<%= element.id %>" style="text-decoration: none; padding-left: 0;">
                      <div class="img">
                        <img src="/images/<%=element.image%> " alt="">
                      </div>
                      <div class="content">
                        <div class="title text-dark" id="nombre" idProducto="<%=element.id%>">
                          <%=element.name%>
                        </div>
                        <div class="price">
                          $<%=element.price%>
                        </div>
                    </a>
                    
                    
                    <div class="btn text-center" style="width: 100%; padding-left: 0; margin: 0;">
                      <button type="submit" idProducto="<%=element.id%>" style="z-index: 200; width: 100%; margin-right: 50px; padding-left: 0;" id="boton-<%=element.id%>"
                        class="botones d-flex justify-content-center"><i class="fas fa-cart-plus"  style="margin: 4px 9px;"></i>Agregar al carrito</button>
                    </div>
                  </div>
              </div>
      
              <% }) %>
      
      
        </div>
      </div>
    </section>
    <script>
      $(".slider").owlCarousel({
        loop: true,
        autoplay: true,
        autoplayTimeout: 2000, //2000ms = 2s;
        autoplayHoverPause: true,
      });
    </script>
    </div>
    </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
      crossorigin="anonymous"></script>
      <a href="#arriba"><input type="button" class="up"></a>
    <%- include("partials/footer")%>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>
   
    <script src="/javascripts/carrito.js"></script>
          <script src="/javascripts/carritoBotones.js"></script>
          <script src="/javascripts/productosCarrito.js"></script>
   
  </body>
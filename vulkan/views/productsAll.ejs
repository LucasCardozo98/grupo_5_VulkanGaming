<%- include("partials/head")%>
<%- include("partials/header")%>
<form action="/products/filtrado" method="GET">
  <select class="btn btn-dark d-grid gap-2 col-6 mx-auto mt-5 mb-4" name="categoria" id="">
    <option selected value="no filtrar">No filtrar por categoria</option> 
    <%categorys.forEach(element => { %>
      <option value="<%=element.id%>"><%=element.name%> </option>
     <% }) %>
  </select><br>
  <select class="btn btn-dark d-grid gap-2 col-6 mx-auto mt-5 mb-4" name="marca" id="">
    <option selected value="no filtrar">No filtrar por marca</option> 
    <%brands.forEach(element => { %>
      <option value="<%=element.id%>"><%=element.name%> </option>
     <% }) %>
  </select><br>
  <button class="btn btn-dark d-grid gap-2 col-2 mx-auto mt-5 mb-4" type="submit">Filtrar</button>
</form>

<div class="contenedora">
    <% products.forEach(element => { %>                      
          <div class=" tarjeta " >
            <a href="/products/detail/<%= element.id %> "><img src="/images/<%=element.image  %> "  alt="..."></a>
            <div class="card-body">
              <h5 class="card-title"><%= element.brand  %> </h5>
              <p class="card-text"> <%= element.price  %> </p>
              <a href="#" class="btn btn-primary w-100">Agregar al carrito</a>
              <div class="botones ">
              <form id="eliminar" action="/products/delete/<%= element.id %>?_method=delete" method="POST">
              <button id="botonEliminar" type="submit" class="btn btn-danger" onclick="confirmar(event,document.querySelector('#eliminar'))">Eliminar</button></form>
              <button class="btn btn-primary" > <a class="text-white" href="/products/edit/<%= element.id %> ">Editar</a></button>
              </div>
            </div>
          </div>
    <% }) %>
    </div>
<%- include("partials/footer")%>
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>
  <script src="/javascripts/alertaEliminarProducto.js"></script>
</body>